<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    skin:enable="true"
    android:background="@drawable/nt_chat_network_tips">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/nt_iv_network_no"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart ="14dp"
            android:background="@drawable/nt_chat_network_no"  />
        
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/nt_iv_network_no"
            android:clickable="false"
            android:text="当前网络不可用，请检查网络设置"
            android:textColor="@color/msg_system_text"
            android:textSize="12dp"
            skin:enable="true"
            tools:ignore="UnusedIds" />
    </RelativeLayout>

</RelativeLayout>