<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_dialog_img"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/nt_voice_dialog_bg_8"
        android:gravity="center_horizontal"
        android:paddingTop="102dp"
        android:textColor="@color/xn_white"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_dialog_img2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/nt_dialog_background_voice"
        android:gravity="center_horizontal"
        android:paddingTop="102dp"
        android:textColor="@color/xn_white"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_dialog_img3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/nt_voice_timer_short"
        android:gravity="center_horizontal"
        android:paddingTop="102dp"
        android:text="@string/xn_tooshort"
        android:textColor="@color/xn_white"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>