<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">
    
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lv_sendtime"
        android:layout_marginStart ="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="36dp">
        
        <RelativeLayout
            android:id="@+id/l_rl_voice_uname"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="#18959595"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:layout_toEndOf="@id/iv_lv_userhead"
            android:visibility="gone" >
            
            <TextView
                android:id="@+id/l_voice_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#656565"
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/i_tv_chatccl"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/l_rl_voice_uname"
            android:layout_toEndOf="@id/iv_lv_userhead"
            android:background="@drawable/nt_chat_item_left_text"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd ="10dp">
            
            <ImageView
                android:id="@+id/iv_chatting_preview"
                android:layout_width="35dp"
                android:layout_height="7dp"
                android:layout_centerVertical="true"
                android:layout_marginStart ="10dp"
                android:src="@drawable/nt_anim_msg_preview" />
        </RelativeLayout>
    
    </RelativeLayout>

</RelativeLayout>